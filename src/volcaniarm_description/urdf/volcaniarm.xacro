<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="volcaniarm">

    <xacro:include filename="./materials.xacro"/>

    <!-- World link for fixing the robot -->
    <link name="world"/>

    <!-- Fix base to world -->
    <joint name="world_to_base" type="fixed">
        <parent link="world"/>
        <child link="base_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <link name="base_link">
        <visual>
            <origin xyz="0 0 1.3" rpy="0 0 0"/>
            <geometry>
                <box size="0.7 0.3 0.1"/>
            </geometry>
            <material name="blue">
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 1.3" rpy="0 0 0"/>
            <geometry>
                <box size="0.7 0.3 0.1"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 1.3" rpy="0 0 0"/>
            <mass value="10.0"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.5" iyz="0.0" izz="0.5"/>
        </inertial>
    </link>

    <!-- Linear rail link -->
    <link name="linear_rail_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.1 0.25 0.05"/>
            </geometry>
            <material name="green">
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.1 0.25 0.05"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="1.0"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
        </inertial>
    </link>

    <!-- Prismatic joint for linear movement -->
    <joint name="linear_rail_joint" type="prismatic">
        <parent link="base_link"/>
        <child link="linear_rail_link"/>
        <origin xyz="0 0 1.25" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="-0.28" upper="0.28" effort="100" velocity="0.1"/>
    </joint>

    <!-- Upper arm 1 -->
    <link name="upper_arm_1_link">
        <visual>
            <origin xyz="0 0 -0.15" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.02" length="0.3"/>
            </geometry>
            <material name="blue">
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 -0.15" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.02" length="0.3"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 -0.15" rpy="0 0 0"/>
            <mass value="0.5"/>
            <inertia ixx="0.004" ixy="0.0" ixz="0.0" iyy="0.004" iyz="0.0" izz="0.0001"/>
        </inertial>
    </link>

    <joint name="upper_arm_1_joint" type="revolute">
        <parent link="linear_rail_link"/>
        <child link="upper_arm_1_link"/>
        <origin xyz="0 0.125 0" rpy="0 0 1.57"/>
        <axis xyz="0 1 0"/>
        <limit lower="-1.57" upper="1.57" effort="50" velocity="2.0"/>
    </joint>

    <!-- Upper arm 2 -->
    <link name="upper_arm_2_link">
        <visual>
            <origin xyz="0 0 -0.15" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.02" length="0.3"/>
            </geometry>
            <material name="blue">
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 -0.15" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.02" length="0.3"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 -0.15" rpy="0 0 0"/>
            <mass value="0.5"/>
            <inertia ixx="0.004" ixy="0.0" ixz="0.0" iyy="0.004" iyz="0.0" izz="0.0001"/>
        </inertial>
    </link>

    <joint name="upper_arm_2_joint" type="revolute">
        <parent link="linear_rail_link"/>
        <child link="upper_arm_2_link"/>
        <origin xyz="0 -0.125 0" rpy="0 0 1.57"/>
        <axis xyz="0 1 0"/>
        <limit lower="-1.57" upper="1.57" effort="50" velocity="2.0"/>
    </joint>

    <!-- Forearm 1 -->
    <link name="forearm_1_link">
        <visual>
            <origin xyz="0 0 -0.15" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.015" length="0.3"/>
            </geometry>
            <material name="green">
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 -0.15" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.015" length="0.3"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 -0.15" rpy="0 0 0"/>
            <mass value="0.3"/>
            <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.002" iyz="0.0" izz="0.00007"/>
        </inertial>
    </link>

    <joint name="forearm_1_joint" type="revolute">
        <parent link="upper_arm_1_link"/>
        <child link="forearm_1_link"/>
        <origin xyz="0 0 -0.3" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="-1.57" upper="1.57" effort="50" velocity="2.0"/>
    </joint>

    <!-- Forearm 2 -->
    <link name="forearm_2_link">
        <visual>
            <origin xyz="0 0 -0.15" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.015" length="0.3"/>
            </geometry>
            <material name="green">
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 -0.15" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.015" length="0.3"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 -0.15" rpy="0 0 0"/>
            <mass value="0.3"/>
            <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.002" iyz="0.0" izz="0.00007"/>
        </inertial>
    </link>

    <joint name="forearm_2_joint" type="revolute">
        <parent link="upper_arm_2_link"/>
        <child link="forearm_2_link"/>
        <origin xyz="0 0 -0.3" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="-1.57" upper="1.57" effort="50" velocity="2.0"/>
    </joint>

    <!-- End effector platform -->
    <link name="end_effector_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.1 0.25 0.02"/>
            </geometry>
            <material name="blue">
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.08 0.23 0.015"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.1"/>
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
        </inertial>
    </link>

    <!-- Connect end effector to forearm 1 -->
    <joint name="end_effector_joint_1" type="revolute">
        <parent link="forearm_1_link"/>
        <child link="end_effector_link"/>
        <origin xyz="0 0 -0.3" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="-1.57" upper="1.57" effort="50" velocity="2.0"/>
    </joint>

    <!-- Closing link for the second connection -->
    <link name="closing_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.005"/>
            </geometry>
            <material name="red">
            </material>
        </visual>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.001"/>
            <inertia ixx="0.000001" ixy="0.0" ixz="0.0" iyy="0.000001" iyz="0.0" izz="0.000001"/>
        </inertial>
    </link>

    <!-- Connect forearm 2 to closing link -->
    <joint name="forearm_2_closing_joint" type="revolute">
        <parent link="forearm_2_link"/>
        <child link="closing_link"/>
        <origin xyz="0 0 -0.3" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="-1.57" upper="1.57" effort="50" velocity="2.0"/>
    </joint>

    <!-- Gazebo detachable joint to close the loop -->
    <gazebo>
        <plugin filename="gz-sim-detachable-joint-system" name="gz::sim::systems::DetachableJoint">
            <parent_link>end_effector_link</parent_link>
            <child_model>volcaniarm</child_model>
            <child_link>closing_link</child_link>
            <joint_type>fixed</joint_type>
            <initial_attached>true</initial_attached>
            <suppress_child_warning>true</suppress_child_warning>
        </plugin>
    </gazebo>

</robot>
